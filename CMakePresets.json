{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Sets GCC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "/usr",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_CCACHE": "OFF",
        "WITH_DESKTOP": "ON",
        "WITH_SERVER": "ON",
        "WITH_3D": "ON",
        "WITH_BINDINGS": "ON",
        "WITH_CUSTOM_WIDGETS": "ON",
        "BINDINGS_GLOBAL_INSTALL": "ON",
        "WITH_STAGED_PLUGINS": "ON",
        "WITH_GRASS": "ON",
        "SUPPRESS_QT_WARNINGS": "ON",
        "DISABLE_DEPRECATED": "ON",
        "ENABLE_TESTS": "OFF",
        "WITH_QSPATIALITE": "ON",
        "WITH_APIDOC": "OFF",
        "WITH_ASTYLE": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Sets release build type",
      "inherits": "linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build-linux",
      "displayName": "Default",
      "configurePreset": "linux-debug",
      "description": "Vanilla build"
    },
    {
      "name": "verbose-build-linux",
      "displayName": "Verbose Build",
      "description": "Passes -v to Ninja",
      "configurePreset": "linux-debug",
      "nativeToolOptions": [
        "-v"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "core-test-linux",
      "description": "Enable output on failure",
      "configurePreset": "linux-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}